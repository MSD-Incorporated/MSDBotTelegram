{
	"name": "msdbot_telegram",
	"author": {
		"name": "MasedMSD",
		"url": "https://github.com/MasedMSD"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/MSD-Incorporated/MSDBotTelegram"
	},
	"devDependencies": {
		"prettier": "^3.7.4"
	},
	"license": "MIT",
	"packageManager": "bun@1.3.0",
	"private": true,
	"scripts": {
		"build:bot": "bun build --entrypoint ./apps/bot/src/**.ts --compile --outfile dist/msdbot_telegram --target=bun-linux-x64",
		"watch": "bun --watch run ./apps/bot/src/index.ts",
		"format": "prettier --write --cache '{.github,apps,packages}/**/*.{js,ts,json,md,yml,yaml}'"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
