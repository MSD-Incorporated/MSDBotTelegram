{
	"$schema": "https://json.schemastore.org/prettierrc.json",

	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 120,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "es5",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"quoteProps": "as-needed",
	"endOfLine": "lf",

	"overrides": [
		{
			"files": [".vscode/*.json"],
			"options": {
				"parser": "jsonc",
				"quoteProps": "preserve",
				"trailingComma": "all"
			}
		},
		{
			"files": [".github/*.yml", ".github/*.yaml"],
			"options": {
				"parser": "yaml",
				"tabWidth": 4,
				"useTabs": false
			}
		}
	]
}
