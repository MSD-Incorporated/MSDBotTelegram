{
	"$schema": "https://json.schemastore.org/prettierrc.json",
	"arrowParens": "avoid",
	"printWidth": 120,
	"semi": true,
	"trailingComma": "es5",
	"quoteProps": "as-needed",
	"singleQuote": false,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": [".vscode/*.json"],
			"options": {
				"parser": "jsonc",
				"quoteProps": "preserve",
				"trailingComma": "all"
			}
		},
		{
			"files": [".github/*.yml", ".github/*.yaml"],
			"options": {
				"parser": "yaml",
				"useTabs": false,
				"tabWidth": 4
			}
		}
	]
}
